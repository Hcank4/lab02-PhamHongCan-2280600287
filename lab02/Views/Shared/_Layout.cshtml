<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - WebsiteBanHang</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

</head>
<body class="d-flex flex-column min-vh-100">

  <header class="bg-success text-white text-center py-4">
    <h1>Trang Web Bán Hàng</h1>
  </header>

  <nav class="navbar navbar-expand-lg navbar-dark bg-warning">
    <div class="container">
      <a class="navbar-brand" asp-controller="Home" asp-action="Index">Trang Chủ</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" asp-controller="Product" asp-action="Index">Sản Phẩm</a></li>
          <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Liên Hệ</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <main class="container mt-4 flex-grow-1">
    @RenderBody()
  </main>

  <footer class="bg-dark text-white mt-auto">
    <div class="container">
      <div class="row text-center py-4">
        <div class="col-md-4">
          <h3>Cột 1</h3>
          <p>Nội dung cột 1.</p>
        </div>
        <div class="col-md-4">
          <h3>Cột 2</h3>
          <p>Nội dung cột 2.</p>
        </div>
        <div class="col-md-4">
          <h3>Cột 3</h3>
          <p>Nội dung cột 3.</p>
        </div>
      </div>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  @RenderSection("Scripts", required: false)
</body>
</html>